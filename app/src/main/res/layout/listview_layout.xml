<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#c6c9ce">



    <LinearLayout
        android:layout_marginTop="40dp"
        android:background="#c6c9ce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:textSize="16sp"
            android:id="@+id/textView_jobName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="job name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/textView_jobType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/ic_lightbulb_outline_black_24dp"
            android:text="Type"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_jobSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_attach_money_black_24dp"
            android:textSize="13sp"
            android:text="Salary"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView_jobTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:textSize="13sp"
            android:text="Time"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView_jobLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:textSize="13sp"
            android:text="Location"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView_jobDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Desc"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:onClick="onClick"
            android:id="@+id/btnFav"
            android:padding="20dp"
            android:textAlignment="center"
            android:drawablePadding="1dp"
            android:drawableLeft="@drawable/ic_work_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonborder"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="Favourite"
            android:layout_gravity="start" />

        <Button
            android:id="@+id/btnApply"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/buttonborder"
            android:drawableLeft="@drawable/ic_work_black_24dp"
            android:drawablePadding="2dp"
            android:padding="20dp"
            android:text="Apply Job"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:id="@+id/viewImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/jobicon"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
      />

</RelativeLayout>